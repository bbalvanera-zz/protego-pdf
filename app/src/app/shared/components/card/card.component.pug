nav.navbar.navbar-expand-sm.navbar-dark.bg-primary
  span.navbar-brand.pl-2
    a.text-light.mr-2(*ngIf="returnRoute", [routerLink]="returnRoute")
      i.fas.fa-arrow-left
    | {{cardTitle}}


.card.fixed-height
  //h6.card-header.bg-primary.text-light([ngClass]="{'pl-2': returnRoute}")
    a.text-light.mr-2(*ngIf="returnRoute", [routerLink]="returnRoute")
      i.fas.fa-arrow-left
    | {{cardTitle}}
  div
    ng-content(select=".card-body")
  .card-footer
    .container.p-0
      .row.justify-content-between
        .col-8
          ng-content(select="[footer]")
        .col-4
          button.btn.btn-sm.btn-link.text-secondary.float-right(
            type="button",
            title="About",
            i18n-title="about|Tooltip indicating this is the about button",
            (click)="showAbout()"
          )
            i.mr-1.fas.fa-question-circle
            | About
