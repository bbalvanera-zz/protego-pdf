.row
  .col.col-left
    label {{label}}
  .col.col-right
    .btn-group.btn-group-toggle.btn-group-sm(ngbRadioGroup, [formControl]="radioGroup")
      label.btn-primary(ngbButtonLabel)
        input(type="radio", ngbButton, [value]="false")
        ng-container(i18n) No
      label.btn-primary(ngbButtonLabel)
        input(type="radio", ngbButton, [value]="true")
        ng-container(i18n) Yes
